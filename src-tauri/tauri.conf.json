{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "flymd",
  "version": "0.1.2",
  "identifier": "com.flymd",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "security": {
      "csp": "default-src * 'unsafe-inline' 'unsafe-eval' data: blob: filesystem: ws: wss: http: https: ipc: asset:; img-src * data: blob: asset: http: https:; style-src * 'unsafe-inline' blob:; font-src * data: blob:; script-src * 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval' http: https: data: blob:; worker-src * blob: data:; connect-src * ipc: http: https: ws: wss: data: blob: http://ipc.localhost; object-src *; base-uri *; form-action *",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "$APP/**",
            "$RESOURCE/**",
            "$DESKTOP/**",
            "$DOCUMENT/**",
            "$DOWNLOAD/**",
            "$PICTURE/**",
            "$HOME/**"
          ]
        }
      },
      "capabilities": [
        {
          "identifier": "main-fs-user-files",
          "description": "允许 main 窗口访问用户目录与常见目录的文件系统读写，并使用文件对话框与存储",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "core:window:allow-close",
            "core:window:allow-destroy",
            "dialog:default",
            "dialog:allow-ask",
            "dialog:allow-open",
            "dialog:allow-save",
            "fs:allow-open",
            "fs:allow-create",
            "fs:allow-read",
            "fs:allow-read-file",
            "fs:allow-read-text-file",
            "fs:allow-read-dir",
            "fs:allow-write-text-file",
            "fs:allow-home-read-recursive",
            "fs:allow-home-write-recursive",
            "fs:allow-desktop-read-recursive",
            "fs:allow-desktop-write-recursive",
            "fs:allow-document-read-recursive",
            "fs:allow-document-write-recursive",
            "fs:allow-download-read-recursive",
            "fs:allow-download-write-recursive",
            "fs:allow-exe-write-recursive",
            "fs:allow-log-write-recursive",
            "fs:allow-appdata-write-recursive",
            "fs:allow-applocaldata-write-recursive",
            "fs:allow-appconfig-write-recursive",
            "store:default",
            "opener:default",
            "window-state:default"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "飞速MarkDown v0.1.2",
        "width": 960,
        "height": 640,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "visible": true,
        "dragDropEnabled": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": [
          "md",
          "markdown"
        ],
        "role": "Editor",
        "description": "Markdown 文档",
        "mimeType": "text/markdown",
        "name": "Markdown"
      }
    ]
  }
}
